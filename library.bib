keywords = {microfluidics,partitioning,pulsing,shared resources,sharing,time sharing},
number = {2},
pages = {216--229.e15},
title = {{Molecular Time Sharing through Dynamic Pulsing in Single Cells}},
volume = {6},
year = {2018}
}
